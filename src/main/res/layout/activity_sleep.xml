                  android:id="@+id/slp">



        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/txtnss1"
                  android:text="{ اللهم باسمك أحيا وأموت}"
                  android:textAlignment="center"
                  android:background="@drawable/corner"
                  android:layout_marginTop="5dp"
                  android:textStyle="bold"

                  android:layout_marginRight="5dp"
                  android:layout_marginLeft="5dp"
                  android:paddingRight="2dp"
                  android:paddingLeft="2dp"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/txts88"
                  android:text="{ اللهم باسمك ربي وضعت جنبي وبك أرفعه، إن أمسكت نفسي فارحمها، وإن أرسلتها فاحفظها بما تحفظ به عبادك الصالحين}"
                  android:background="@drawable/corner"
                  android:layout_marginTop="5dp"
                  android:textStyle="bold"

                  android:layout_marginRight="5dp"
                  android:layout_marginLeft="5dp"
                  android:paddingRight="2dp"
                  android:paddingLeft="2dp"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/txtns2"
                  android:text="{ اللهم قني عذابك يوم تبعث عبادك} ( ثلاث مرات )"
                  android:background="@drawable/corner"
                  android:layout_marginRight="5dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="5dp"
                  android:paddingRight="2dp"
                  android:textStyle="bold"
                  android:paddingLeft="2dp"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/txtnss3"
                  android:text="{ أعوذ بكلمات الله التامات من شر ما خلق} ( ثلاث مرات )"
                  android:background="@drawable/corner"
                  android:layout_marginRight="5dp"
                  android:layout_marginTop="5dp"
                  android:textStyle="bold"

                  android:layout_marginLeft="5dp"
                  android:paddingRight="2dp"
                  android:paddingLeft="2dp"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/txtnsn4"
                  android:text="أعوذ بالله من الشيطان الرجيم ﴿آمـَنَ الرَّسـُولُ بِمَا أُنزِلَ إِلَيْهِ مِن رَّبِّهِ وَالْمُؤْمِـنُونَ ۚ كـُلٌّ آمـَنَ بِاللَّهِ وَمـَلَائِـكَتِهِ وَكُـتُبِهِ وَرُسُـلـِهِ لَا نـُفـَرِّقُ بـَيْنَ أَحَدٍ مِّن رُّسُلِهِ ۚ وَقَالُوا سَمِعْنَا وَأَطَعْنَا ۖ غُفْرَانَكَ رَبَّنَا وَإِلَيْكَ الْمَصِيرُ (*) لَا يُكَلِّفُ اللَّهُ نَفْسًا إِلَّا وُسْعَهَا ۚ لَهَا مَا كَسَبَتْ وَعَلَيْهَا مَا اكْتَسَبَتْ ۗ رَبَّنَا لَا تُؤَاخِذْنَا إِن نَّسِينَا أَوْ أَخْطَأْنَا ۚ رَبَّنَا وَلَا تَحْمِلْ عَلَيْنَا إِصْرًا كَمَا حَمَلْتَهُ عَلَى الَّذِينَ مِن قَبْلِنَا ۚ رَبَّنَا وَلَا تُحَمِّلْنَا مَا لَا طَاقَةَ لَنَا بِهِ ۖ وَاعْفُ عَنَّا وَاغْفِرْ لَنَا وَارْحَمْنَا ۚ أَنتَ مَوْلَانَا فَانصُرْنَا عَلَى الْقَوْمِ الْكَافِرِينَ﴾"
                  android:background="@drawable/corner"
                  android:layout_marginRight="5dp"
                  android:layout_marginTop="5dp"
                  android:textStyle="bold"
                  android:layout_marginLeft="5dp"
                  android:paddingRight="2dp"
                  android:paddingLeft="2dp"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/txtnn5"
                  android:text="{ سبحان الله وبحمده} - (  مئة مرة)"
                  android:background="@drawable/corner"
                  android:textAlignment="center"
                  android:layout_marginRight="5dp"
                  android:layout_marginTop="5dp"
                  android:textStyle="bold"
                  android:layout_marginLeft="5dp"
                  android:paddingRight="2dp"
                  android:paddingLeft="2dp"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/txtnn6"
                  android:text="{لا إله إلا الله وحده لا شريك له له الملك وله الحمد وهو على كل شيء قدير } - (مرة واحدة)"
                  android:background="@drawable/corner"
                  android:layout_marginRight="5dp"
                  android:layout_marginTop="5dp"
                  android:textStyle="bold"
                  android:layout_marginLeft="5dp"
                  android:paddingRight="2dp"
                  android:paddingLeft="2dp"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/txtnn7"
                  android:text="{يا حي يا قيوم برحمتك أستغيث أصلح لي شأني كله و لا تكلني إلى نفسي طرفة عين } - (مرة واحدة)"
                  android:background="@drawable/corner"
                  android:layout_marginRight="5dp"
                  android:layout_marginTop="5dp"
                  android:textStyle="bold"
                  android:layout_marginLeft="5dp"
                  android:paddingRight="2dp"
                  android:paddingLeft="2dp"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/txtnn8"
                  android:text="{اللهـم إني أسـألك العافية في الدنـيا والآخـرة اللهم إني أسألك العفو والعافـية في ديـني ودنياي وأهلـي ومـالي الـلـهم استر عوراتي وآمن روعـاتـي اللهـم احفـظـني مـن بـين يــدي ومـن خـلـفي وعـن يـمـيـنـي وعن شمالي ومن فوقي  وأعوذ بعظمتك أن أغتال من تحتي } - (مرة واحدة)"
                  android:background="@drawable/corner"
                  android:layout_marginRight="5dp"
                  android:layout_marginTop="5dp"
                  android:textStyle="bold"
                  android:layout_marginLeft="5dp"
                  android:paddingRight="2dp"
                  android:paddingLeft="2dp"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/txtnn9"
                  android:text="{اللهم فاطر السماوات والأرض  عالم الغيب والشهادة رب كل شيء ومليكه أشهد أن لا إله إلا أنت أعوذ بك من شر نفسي وشر الشيطان وشركه وأن أقترف على نفسي سوء أوأجره إلى مسلم } - (مرة واحدة)"
                  android:background="@drawable/corner"
                  android:layout_marginRight="5dp"
                  android:layout_marginTop="5dp"
                  android:textStyle="bold"
                  android:layout_marginLeft="5dp"
                  android:paddingRight="2dp"
                  android:paddingLeft="2dp"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/txtm10"
                  android:text="{الـلهـم أنـت ربـي لا إلـه إلا أنـت خلـقتـني وأنا عبـدك وأنا عـلى عـهـدك ووعـدك مـااسـتطـعـت أعـوذ بـك من شـر مـا صنـعت أبـوء لـك بنعمتك علي وأبوء لك بذنبي فاغفر لي فإنه لا يغفر الذنوب إلا أنت} - ( مرة واحدة)"
                  android:background="@drawable/corner"
                  android:layout_marginRight="5dp"
                  android:layout_marginTop="5dp"
                  android:textStyle="bold"
                  android:layout_marginLeft="5dp"
                  android:paddingRight="2dp"
                  android:paddingLeft="2dp"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/txtnn12"
                  android:text="أعوذ بالله من الشيطان الرجيم ﴿اللَّهُ لاَ إِلـَٰهَ إِلاَّ هـُوَ الْحَـيُّ الْـقَيـُّومُ لاَ تَأْخُذُهُ سِـنَةٌ وَلاَ نَـوْمٌ لَّهُ مَا فِي السَّمَاوَاتِ وَمَا فِي الأَرْضِ مَن ذَا الَّذِي يَشْفَعُ عِـنْدَهُ إِلاَّ بِإِذْنِهِ يَعْلـَمُ مَا بَيْنَ أَيْـدِيـهِمْ  وَمَا خَلْفَهُمْ وَلاَ يُحِيطُونَ بِشَيْءٍ مِّنْ عِلْمِهِ إِلاَّ بِمَا شَاء وَسِعَ كُرْسِيُّهُ السَّمَاوَاتِ وَالأَرْضَ وَلاَ يَؤُودُهُ حِفْظُهُمَا وَهُوَ الْعَلِيُّ الْعَظِيمُ﴾"
                  android:background="@drawable/corner"
                  android:layout_marginRight="5dp"
                  android:layout_marginTop="5dp"
                  android:textStyle="bold"
                  android:layout_marginLeft="5dp"
                  android:paddingRight="2dp"
                  android:paddingLeft="2dp"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/txtnn13"
                  android:text=" بسم الله الرحمن الرحيم {قُلْ هُوَ اللَّهُ أَحَدٌ (1) اللَّهُ الصَّمَدُ (2) لَمْ يَلِدْ وَلَمْ يُولَدْ (3) وَلَمْ يَكُن لَّهُ كُفُوًا أَحَدٌ (4) } - ( ثلاث مرات)"
                  android:background="@drawable/corner"
                  android:layout_marginRight="5dp"
                  android:layout_marginTop="5dp"
                  android:textStyle="bold"
                  android:layout_marginLeft="5dp"
                  android:paddingRight="2dp"
                  android:paddingLeft="2dp"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/txtnn14"
                  android:text=" بسم الله الرحمن الرحيم {قُلْ أَعُوذُ بِرَبِّ الْفَلَقِ (1) مِن شَرِّ مَا خَلَقَ (2) وَمِن شَرِّ غَاسِقٍ إِذَا وَقَبَ (3) وَمِن شَرِّ النَّفَّاثَاتِ فِي الْعُقَدِ (4) وَمِن شَرِّ حَاسِدٍ إِذَا حَسَدَ (5) } - ( ثلاث مرات)"
                  android:background="@drawable/corner"
                  android:layout_marginRight="5dp"
                  android:layout_marginTop="5dp"
                  android:textStyle="bold"
                  android:layout_marginLeft="5dp"
                  android:paddingRight="2dp"
                  android:paddingLeft="2dp"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/txtnn15"
                  android:text=" بسم الله الرحمن الرحيم {قُلْ أَعُوذُ بِرَبِّ النَّاسِ (1) مَلِكِ النَّاسِ (2) إِلَٰهِ النَّاسِ (3) مِن شَرِّ الْوَسْوَاسِ الْخَنَّاسِ (4) الَّذِي يُوَسْوِسُ فِي صُدُورِ النَّاسِ (5) مِنَ الْجِنَّةِ وَالنَّاسِ (6) } - ( ثلاث مرات)"
                  android:background="@drawable/corner"
                  android:layout_marginRight="5dp"
                  android:layout_marginTop="5dp"
                  android:textStyle="bold"
                  android:layout_marginBottom="5dp"
                  android:layout_marginLeft="5dp"
                  android:paddingRight="2dp"
                  android:paddingLeft="2dp"/>
    </LinearLayout>


</ScrollView>