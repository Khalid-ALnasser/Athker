                  android:layout_marginRight="5dp"
                  android:layout_marginLeft="5dp"
                  android:paddingRight="2dp"
                  android:paddingLeft="2dp"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
